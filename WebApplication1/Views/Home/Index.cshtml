@model IEnumerable<WebApplication1.Models.Movie>
@{
    ViewBag.Title = "Home Page";
}

<!-- New Arrivals -->

<div class="new_arrivals">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <div class="section_title new_arrivals_title">
                    <h1>Movie List</h1>
                </div>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="col text-center">
                <div class="new_arrivals_sorting">
                    <ul class="arrivals_grid_sorting clearfix button-group filters-button-group">
                        <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center active is-checked" data-filter="*">all</li>
                        <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center active is-checked" data-filter=".Action">Action</li>
                        <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center active is-checked" data-filter=".Romantic">Romantic</li>
                        <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center active is-checked" data-filter=".Horror">Horror</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="product-grid" data-isotope='{ "itemSelector": ".product-item", "layoutMode": "fitRows" }'>
                    @foreach (var item in Model)
                    {
                        <div class="product-item @item.category">
                            <div class="product product_filter">
                                <div>
                                    <img src="@item.poster" class="img">
                                </div>
                                <div class="product_info">
                                    <h6 class="product_name"><a href="@Url.Action("Detail", "Home", new {id = item.movie_id} )">@item.movie_name</a></h6>
                                    <div class="product_price">$@item.price</div>
                                </div>
                            </div>
                            <div class="red_button add_to_cart_button"><a href="@Url.Action("Detail", "Home", new {id = item.movie_id} )">Read More....</a></div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .img {
        width: 100%;
        height: 250px;
    }
</style>